<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/easy_bank</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">aziz</property>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="entities.Agency" />
        <mapping class="entities.Client" />
        <mapping class="entities.CurrentAccount" />
        <mapping class="entities.Demand" />
        <mapping class="entities.Employee" />
        <mapping class="entities.Mission" />
        <mapping class="entities.MissionHistory" />
        <mapping class="entities.Operation" />
        <mapping class="entities.Payment" />
        <mapping class="entities.Person" />
        <mapping class="entities.RecruitmentHistory" />
        <mapping class="entities.SavingAccount" />

    </session-factory>
</hibernate-configuration>